<p id="notice"><%= notice %></p>

<h1>Books</h1>
<h1>Haoning Book Ruby-on-Rails</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
      <th>Author</th>
      <th colspan="3"></th>
      <th>Price</th>
      <th colspan="3"></th>
      <th>Published Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.published_date %></td>
        <td class="actions">
          <%= link_to 'Show', book %>
          <%= link_to 'Edit', edit_book_path(book) %>
          <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
